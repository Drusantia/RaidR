<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RaidRTooltip" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">16dp</item>
        <item name="ttlm_backgroundColor">#C8000000</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="ttlm_arrowRatio">1.5</item>
        <item name="ttlm_textStyle">@style/RaidRTooltipText</item>
        <item name="ttlm_overlayStyle">@style/RaidRTooltipOverlay.Light</item>
    </style>
    <style name="RaidRTooltip.DarkOverlay" parent="RaidRTooltip">
        <item name="ttlm_overlayStyle">@style/RaidRTooltipOverlay.Dark</item>
    </style>

    <style name="RaidRTooltipText" parent="ToolTipTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RaidRTooltipOverlay.Light" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">#FFF</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="RaidRTooltipOverlay.Dark" parent="RaidRTooltipOverlay.Light">
        <item name="android:color">#000</item>
    </style>
</resources>