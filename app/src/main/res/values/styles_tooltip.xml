<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RaidRToolTipStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_padding">16dp</item>
        <item name="ttlm_backgroundColor">#C8000000</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="ttlm_arrowRatio">1.5</item>
        <item name="ttlm_textStyle">@style/RaidRToolTipText</item>
        <item name="ttlm_overlayStyle">@style/RaidRToolTipOverlay</item>
    </style>

    <style name="RaidRToolTipText" parent="ToolTipTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RaidRToolTipOverlay" parent="ToolTipOverlayDefaultStyle">
        <item name="android:color">#FFF</item>
        <item name="android:alpha">0.5</item>
    </style>
</resources>